datasource db {
  provider = "mysql"
  url      = env("SECRET_MYSQL_AUTH_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../_db/y_prisma"
}

//
//
// テーブル名は単数で; schema.prisma を読みやすくするため
// カラム名はデータベース内でできる限り衝突させない
// id カラムは {table}_id

model user {
  user_id                               String                                 @id @db.VarChar(36)
  login_id                              String                                 @unique @db.VarChar(100)
  tickets                               ticket[]
  ticket_discardeds                     ticket_discarded[]
  user_granted_roles                    user_granted_role[]
  user_password                         user_password?
  user_password_reset_tokens            user_password_reset_token[]
  user_password_reset_token_destination user_password_reset_token_destination?
}

model user_granted_role {
  user    user   @relation(fields: [user_id], references: [user_id])
  user_id String @db.VarChar(36)
  role    String @db.VarChar(50)

  @@id([user_id, role])
}

model user_password {
  user            user   @relation(fields: [user_id], references: [user_id])
  user_id         String @id @db.VarChar(36)
  hashed_password String @db.VarChar(96)
}

model user_password_reset_token {
  user         user      @relation(fields: [user_id], references: [user_id])
  user_id      String    @db.VarChar(36)
  reset_token  String    @unique @db.VarChar(36)
  login_id     String    @db.VarChar(100)
  expires      DateTime
  requested_at DateTime
  reset_at     DateTime?

  @@id([user_id, reset_token])
}

model user_password_reset_token_destination {
  user    user   @relation(fields: [user_id], references: [user_id])
  user_id String @id @db.VarChar(36)
  email   String @db.VarChar(250)
}

model ticket {
  user            user     @relation(fields: [user_id], references: [user_id])
  user_id         String   @db.VarChar(36)
  ticket_id       String   @id @db.VarChar(36)
  expansion_limit DateTime
  issued_at       DateTime
}

model ticket_discarded {
  user       user     @relation(fields: [user_id], references: [user_id])
  user_id    String   @db.VarChar(36)
  ticket_id  String   @db.VarChar(36)
  discard_at DateTime

  @@id([ticket_id, discard_at])
}
