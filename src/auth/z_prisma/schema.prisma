datasource db {
  provider = "mysql"
  url      = env("SECRET_MYSQL_AUTH_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../_db/y_prisma"
}

// テーブル名は単数で; schema.prisma を読みやすくするため
// カラム名はデータベース内でできる限り衝突させない
// id カラムは {table}_id

model user {
  user_id            String              @id @db.VarChar(36)
  tickets            ticket[]
  ticket_discardeds  ticket_discarded[]
  user_granted_roles user_granted_role[]
}

model user_granted_role {
  user    user   @relation(fields: [user_id], references: [user_id])
  user_id String @db.VarChar(36)
  role    String @db.VarChar(50)

  @@id([user_id, role])
}

model ticket {
  user            user     @relation(fields: [user_id], references: [user_id])
  user_id         String   @db.VarChar(36)
  ticket_id       String   @id @db.VarChar(36)
  expansion_limit DateTime
  issued_at       DateTime
}

model ticket_discarded {
  user       user     @relation(fields: [user_id], references: [user_id])
  user_id    String   @db.VarChar(36)
  ticket_id  String   @id @db.VarChar(36)
  discard_at DateTime
}
