datasource db {
  provider = "mysql"
  url      = env("SECRET_MYSQL_AUTH_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../_db/y_prisma"
}

// テーブル名は単数で; schema.prisma を読みやすくするため
// カラム名はデータベース内でできる限り衝突させない
// id カラムは {table}_id

model user {
  user_id          String             @id @db.VarChar(36)
  tickets          ticket[]
  ticket_discarded ticket_discarded[]
}

model ticket {
  user            user     @relation(fields: [user_id], references: [user_id])
  user_id         String   @db.VarChar(36)
  ticket_id       String   @id @db.VarChar(36)
  expansion_limit DateTime
  issued_at       DateTime
}

model ticket_discarded {
  user       user     @relation(fields: [user_id], references: [user_id])
  user_id    String   @db.VarChar(36)
  ticket_id  String   @id @db.VarChar(36)
  discard_at DateTime
}
